# https://editorconfig.org
# 项目编辑器配置文件

root = true

[*]    # 表示所有文件适用
charset = utf-8   # 设置文字字符集为utf-8
indent_style = space  #  缩进风格 (tab | space)
indent_size = 2   #  缩进大小
end_of_line = lf  #  控制缩进类型  (lf | cr | crlf)
insert_final_newline = false  # 始终在文件末尾插入新行
trim_trailing_whitespace = true  # 去除行首的空白字符

[*.md]  # 表示仅markdown文件使用以下规则
insert_final_newline = false
trim_trailing_whitespace = false
